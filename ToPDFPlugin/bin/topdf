BEGIN {
    # Set default current working directory (needed for mod_perl)
    if( $ENV{"SCRIPT_FILENAME"} && $ENV{"SCRIPT_FILENAME"} =~ /^(.+)\/[^\/]+$/ ) {
        chdir $1;
    }
    # Set library paths in @INC, at compile time
    unshift @INC, '.';
    require 'setlib.cfg';
}

use strict;
use Foswiki::Contrib::ToPDFPlugin;

use Foswiki::UI;
Foswiki::UI::run( \&Foswiki::Contrib::ToPDFPlugin::viewPDF );


