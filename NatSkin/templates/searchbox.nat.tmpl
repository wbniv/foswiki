<!-- template: searchbox.nat.tmpl -->
%TMPL:DEF{"searchbox"}%<!-- search box -->
<form name="searchbox" class="natSideBarSearch" action="%SCRIPTURLPATH{"natsearch"}%/%BASEWEB%/%BASETOPIC%" method="post">
<table cellspacing="0" cellpadding="0" border="0"><tr>
<td valign="middle">
<input type="text" title="Enter topic name or a search string" name="search" value="%URLPARAM{"search" default="Search" encode="entity"}%" accesskey="f" onblur="if(this.value==''){this.value = 'Search'}" onfocus="if(this.value=='Search'){this.value = ''}" /> 
</td>
<td valign="middle">
<a href="javascript:document.searchbox.submit()" title="Go"><span>Go</span></a>
</td>
</tr></table>
</form> %TMPL:END%
