BEGIN {
    # See the 'view' script for a description of what this does
    if( $ENV{"SCRIPT_FILENAME"} &&
        $ENV{"SCRIPT_FILENAME"} =~ /^(.+)\/[^\/]+$/ ) {
        chdir $1;
    }
    unshift @INC, '.';
    require 'setlib.cfg';
}

use TWiki::UI;
use TWiki::UI::Register;
TWiki::UI::run( \&TWiki::UI::Register::resetPassword, resetpasswd=>1 );

