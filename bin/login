BEGIN {
    # Set default current working directory (needed for mod_perl)
    if( $ENV{"SCRIPT_FILENAME"} && $ENV{"SCRIPT_FILENAME"} =~ /^(.+)\/[^\/]+$/ ) {
        chdir $1;
    }
    # Set library paths in @INC, at compile time
    unshift @INC, '.';
    require 'setlib.cfg';
}

use TWiki::UI;

TWiki::UI::run( \&logon, (login=>1, logon=>1) );

sub logon {
    my $session = shift;
    $session->{users}->{loginManager}->login( $session->{cgiQuery}, $session );
}
