%TMPL:DEF{"title"}%%TOPIC% (attach)%TMPL:END%
%TMPL:DEF{"bodyclass"}%natAttachBody%TMPL:END%
%TMPL:DEF{"meta"}%<meta name="robots" content="noindex, nofollow" />%TMPL:END%
%TMPL:DEF{"onloadscript"}%document.main.filepath.focus();%TMPL:END%
%TMPL:DEF{"content"}%<!-- -->
%TMPL:P{"previousdetails"}%
<form name="main" enctype="multipart/form-data" action="%SCRIPTURLPATH{"upload"}%/%WEB%/%TOPIC%" method="post">
<table width="100%" style="padding-top:20px">
 <tr>
  <td align="right">
   %MAKETEXT{"Local file:"}%
  </td><td>
   <input type="hidden" name="filename" value="%FILENAME%" />
   <input type="file" name="filepath" value="%FILEPATH%" size="30" />
  </td>
 </tr>
 <tr>
  <td align="right">
   %MAKETEXT{"Comment:"}%
  </td><td>
   <input type="text" name="filecomment" value="%FILECOMMENT%" maxlength="256" size="40" />
  </td>
 </tr>
 <tr>
  <td align="right" style="padding-top:20px">
   %MAKETEXT{"Link:"}%
  </td><td style="padding-top:20px">
   <input type="checkbox" name="createlink" %ATTACHLINKBOX% /> %MAKETEXT{"Create a link to the attached file at the end of the topic."}%
  </td>
 </tr>
 <tr>
  <td align="right">
   %MAKETEXT{"Hide file:"}%
  </td><td>
   <input type="checkbox" name="hidefile" %HIDEFILE% /> %MAKETEXT{"Hide attachment in normal topic view."}%
  </td>
 </tr>
<tr>
<td>&nbsp;</td>
<td style="padding-top:20px">
%TMPL:P{"attachaction"}%
</td>
</tr>
</table>
</form>
<h2>%MAKETEXT{"Existing attachments for <nop>[_1]" args="%TOPIC%"}%</h2>
<div class="natTopicAttachments" style="padding:0px;margin:0px"> %META{"attachments" all="on"}% </div>
%TMPL:END%
