BEGIN {
    # Set default current working directory (needed for mod_perl)
    if( $ENV{"SCRIPT_FILENAME"} && $ENV{"SCRIPT_FILENAME"} =~ /^(.+)\/[^\/]+$/ ) {
        chdir $1;
    }
    # Set library paths in @INC, at compile time
    unshift @INC, '.';
    require 'setlib.cfg';
}

use strict;
use TWiki::Contrib::GenPDFLatex;

if( $TWiki::Plugins::VERSION >= 1.1 ) { 
    # Dakar interface 
    TWiki::UI::run( \&TWiki::Contrib::GenPDFLatex::genfile );
} else { 
    # Cairo interface
    TWiki::Contrib::GenPDFLatex::genfile();
}
